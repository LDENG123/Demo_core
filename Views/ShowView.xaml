                                            <i:InvokeCommandAction Command="{Binding AxisSlectCbxDropDownClosed}"/>
                                        </i:EventTrigger>
                                        <i:EventTrigger EventName="SelectionChanged">
                                            <i:InvokeCommandAction Command="{Binding AxisSlectCbxSelectionChanged}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </ComboBox>
                                <TextBlock Grid.Column="1" FontSize="12" Margin="0 9 0 0" />
                                <TextBox
            Grid.Column="2"
            Margin="0 0 0 0"
            materialDesign:HintAssist.Hint="Build a search bar"
            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
            BorderThickness="0"
            MinWidth="200"
            VerticalAlignment="Center"
                                    Text="{Binding Motion_States}"/>
                                <ToggleButton
      Style="{StaticResource MaterialDesignSwitchAccentToggleButton}"
      VerticalAlignment="Center"
                                    Grid.Column="3"
      DockPanel.Dock="Right"
                               IsChecked="{Binding Isenableaxis}"     />
                            </Grid>
                        </materialDesign:ColorZone>
                    </Grid>
                </StackPanel>
                <StackPanel Grid.Row="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <materialDesign:ColorZone
        Mode="Standard"
        Padding="8 4 8 4"
        CornerRadius="2"
        Panel.ZIndex="1"
        Margin="16 0 0 0"
        materialDesign:ShadowAssist.ShadowDepth="Depth1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition
              Width="Auto" />
                                    <ColumnDefinition
              Width="auto" />
                                    <ColumnDefinition
              Width="auto" />
                                    <ColumnDefinition
              Width="auto" />
                                    <ColumnDefinition
              Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" FontSize="12" Margin="0 15 0 0">
                                    点动:
                                </TextBlock>
                                <Button Grid.Column="1"
  Style="{StaticResource MaterialDesignIconButton}"
  ToolTip="MaterialDesignIconButton"
 >
                                    <materialDesign:PackIcon  Kind="ArrowLeftBold" />
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseRightButtonDown">
                                            <i:InvokeCommandAction Command="{Binding Jogp}"
                                                   CommandParameter="Binding RelativeSource={RelativeSource Self}"/>
                                        </i:EventTrigger>
                                        <i:EventTrigger EventName="MouseRightButtonUp">
                                            <i:InvokeCommandAction Command="{Binding JogStop}"
                                            CommandParameter="Binding RelativeSource={RelativeSource Self}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Button>
                                <Button Grid.Column="2"
  Style="{StaticResource MaterialDesignIconButton}"
  ToolTip="MaterialDesignIconButton"  >
                                    <materialDesign:PackIcon  Kind="ArrowRightBold" />
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseRightButtonDown">
                                            <i:InvokeCommandAction Command="{Binding Jogn}"
                                                   CommandParameter="Binding RelativeSource={RelativeSource Self}"/>
                                        </i:EventTrigger>
                                        <i:EventTrigger EventName="MouseRightButtonUp">
                                            <i:InvokeCommandAction Command="{Binding JogStop}"
                                            CommandParameter="Binding RelativeSource={RelativeSource Self}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Button>
                                <TextBlock Grid.Column="3" FontSize="12" Margin="0 15 0 0">
                                    点动速度:
                                </TextBlock>
                                <TextBox
            Grid.Column="4"
            Margin="0 0 0 0"
            materialDesign:HintAssist.Hint="Build a search bar"
            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
            BorderThickness="0"
            MinWidth="200"
            VerticalAlignment="Center" />
                            </Grid>
                        </materialDesign:ColorZone>
                    </Grid>
                </StackPanel>
                <StackPanel Grid.Row="3">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <materialDesign:ColorZone
        Mode="Standard"
        Padding="8 4 8 4"
        CornerRadius="2"
        Panel.ZIndex="1"
        Margin="16 0 0 0"
        materialDesign:ShadowAssist.ShadowDepth="Depth1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition
              Width="Auto" />
                                    <ColumnDefinition
              Width="auto" />
                                    <ColumnDefinition
              Width="auto" />
                                    <ColumnDefinition
              Width="auto" />
                                    <ColumnDefinition
              Width="*" />
                                    <ColumnDefinition
              Width="auto" />
                                    <ColumnDefinition
              Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" FontSize="12" Margin="0 15 0 0">
                                    Home:
                                </TextBlock>
                                <Button Grid.Column="1"
  Style="{StaticResource MaterialDesignIconButton}"
  ToolTip="HomeButton">
                                    <materialDesign:PackIcon
    Kind="HomeSearch" />
                                </Button>

                                <Button Grid.Column="2"
  Style="{StaticResource MaterialDesignIconButton}"
  ToolTip="AbsButton">
                                    <materialDesign:PackIcon
    Kind="PlayArrow" />
                                </Button>
                                <TextBlock Grid.Column="3" FontSize="12" Margin="0 15 0 0">
                                    绝对速度:
                                </TextBlock>
                                <TextBox
            Grid.Column="4"
            Margin="0 0 0 0"
            materialDesign:HintAssist.Hint="Build a search bar"
            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
            BorderThickness="0"
            MinWidth="200"
            VerticalAlignment="Center" />
                                <TextBlock Grid.Column="5" FontSize="12" Margin="0 15 0 0">
                                    绝对位置:
                                </TextBlock>
                                <TextBox
            Grid.Column="6"
            Margin="0 0 0 0"
            materialDesign:HintAssist.Hint="Build a search bar"
            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
            BorderThickness="0"
            MinWidth="200"
            VerticalAlignment="Center" />
                            </Grid>
                        </materialDesign:ColorZone>
                    </Grid>
                </StackPanel>
            </Grid>

        </GroupBox>
        <GroupBox
  Header="KENCY"
  Style="{DynamicResource MaterialDesignGroupBox}"
  Margin="15,0,0,0"
  materialDesign:ShadowAssist.ShadowDepth="Depth3"
  Grid.Column="2" Grid.Row="1"
  BorderThickness="0">
            <Grid  Margin="-15,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" FontSize="12" Margin="5 9 0 0">
                                    实际高度:
                </TextBlock>
                <TextBox
                    Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}"
            Grid.Column="1"
            Margin="8 0 0 0"
            materialDesign:HintAssist.Hint="Act_High"
            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
            BorderThickness="0"
            MinWidth="250"
            FontSize="15"        
                                    Text="{Binding Act_Hight}"
            VerticalAlignment="Center" />
                <Button
                    Grid.Column="0"
                    Grid.Row="1"
                    Command="{Binding Stop_Read}"  
            CommandParameter="{Binding RelativeSource={RelativeSource Self}}"
  Style="{StaticResource MaterialDesignFloatingActionDarkButton}"
  ToolTip="MaterialDesignFloatingActionDarkButton">
                    <materialDesign:PackIcon
    Kind="Stop"
    Height="24"
    Width="24" />
                </Button>
                <Button
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="10,10,0,0"
    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Command="{Binding Red_Hight}"  
            CommandParameter="{Binding RelativeSource={RelativeSource Self}}"
    ToolTip="Read">
                    读取高度
                </Button>
            </Grid>

        </GroupBox>
        <GroupBox
  Header="SQL"
  Style="{DynamicResource MaterialDesignGroupBox}"
  Margin="15,0,0,0"
  materialDesign:ShadowAssist.ShadowDepth="Depth3"
  Grid.Column="1" Grid.Row="2"
  BorderThickness="0">
            <Grid  Margin="-15,0,0,0">
                <DataGrid
   Grid.Row="0"
  Margin="15,0,0,0"
   ItemsSource="{Binding  Products1}" 
  CanUserSortColumns="True"
  CanUserAddRows="False"
  AutoGenerateColumns="False"
  materialDesign:DataGridAssist.CellPadding="13 8 8 8"
  materialDesign:DataGridAssist.ColumnHeaderPadding="8">
                    <DataGrid.Columns>
                        <DataGridTextColumn
      Binding="{Binding Id}"
      Header="ID" 
      EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}"  />
                        <materialDesign:DataGridTextColumn
      Binding="{Binding UserName}"
      Header="Name"
      EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}"  />
                        <materialDesign:DataGridTextColumn
      Binding="{Binding UserPass}"
      Header="User_Pass"
      EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}"  />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>
        <GroupBox
  Header="Live Chart"
  Style="{DynamicResource MaterialDesignGroupBox}"
  Margin="15,0,0,0"
  materialDesign:ShadowAssist.ShadowDepth="Depth3"
  Grid.Column="2" Grid.Row="2"
  BorderThickness="0">
            <Grid  Margin="-15,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <materialDesign:Card
    materialDesign:ShadowAssist.ShadowDepth="Depth1" Grid.Column="1"
    Padding="1" Margin="0,0,0,0" Height="185">
                    <lvc:CartesianChart Grid.Row="1" Grid.Column="1" AnimationsSpeed="0:0:0.5" Hoverable="False" DataTooltip="{x:Null}" Margin="0,10,8,8">
                        <lvc:CartesianChart.Series>
                            <lvc:LineSeries Values="{Binding ChartValues}" 
                                PointGeometry="{x:Null}" 
                                LineSmoothness="1"
                                StrokeThickness="2" 
                                Stroke="#F34336"
                                Fill="Transparent"
                                LabelPoint="{Binding PointLabel}"/>
                        </lvc:CartesianChart.Series>
                        <lvc:CartesianChart.AxisX>
                            <lvc:Axis LabelFormatter="{Binding DateTimeFormatter}"  LabelsRotation="13"
                          MaxValue="{Binding AxisMax}" 
                          MinValue="{Binding AxisMin}"
                          Unit="{Binding AxisUnit}">
                                <lvc:Axis.Separator>
                                    <lvc:Separator Step="{Binding AxisStep}" />
                                </lvc:Axis.Separator>
                            </lvc:Axis>
                        </lvc:CartesianChart.AxisX>
                    </lvc:CartesianChart>
                </materialDesign:Card>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
